# kill startup message
startup_message off
        
# detach on hangup
autodetach on
                
# define a bigger scrollback, default is 100 lines
defscrollback 4096

# no vbell
vbell off

defutf8 on
nonblock on

hardstatus alwayslastline
hardstatus string '%{= kw}[ %{= kb}%H%{= kw} ][%= %{= kw}%?%-Lw%?%{= kW}%n*%f %t%?%?%{= kw}%?% +Lw%?%?%= ][ %{r}%l%{w} ]%{w}[%{r} %d/%m/%y %C %A %{w}]%{w}'
