map p i<%=  %>F%hi
imap h <%=h  %>F%hi
map h i<%=h  %>F%hi
imap g _('')F'i
map g i_('')F'i
imap e <% end %>
map e i<% end %>
imap t #TODO 
map t i#TODO 
imap i <% if %>o<% end %>
map i i<% if %>o<% end %>
